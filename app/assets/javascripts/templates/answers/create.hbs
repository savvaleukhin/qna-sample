<div id="answer-{{id}}" class="answer">
  <p>{{body}}</p>

  {{#if attachments}}
    <div class='attachments'>
      <table>
        <tbody>
        {{#each attachments}}
          <tr id="attachment-{{id}}">
            <td><a href="{{url}}">{{filename}}</a></td>
            <td><a href="/attachments/{{id}}" data-method="delete" rel="nofollow" data-remote="true">remove</a></td>
          </tr>
        {{/each}}
        </tbody>
      </table>
    </div>
  {{/if}}

  <p><a href="/questions/{{question_id}}/answers/{{id}}/accept" data-method="post" rel="nofollow" data-remote="true">Accept</a></p>
  <p><a class="edit-answer-link" href="" data-answer-id="{{id}}">Edit</a></p>

  <p><a href="/questions/{{question_id}}/answers/{{id}}" data-method="delete" rel="nofollow" data-remote="true">Delete</a></p>
  <form id="edit-answer-{{id}}" class="edit_answer" method="post" data-remote="true" accept-charset="UTF-8" action="/questions/{{question_id}}/answers/{{id}}" data-type="json">
    <input type="hidden" value="âœ“" name="utf8">
    <input type="hidden" value="patch" name="_method">
    <label for="answer_body">Answer</label>
    <textarea id="answer_body" name="answer[body]">{{body}}</textarea>
    <input type="submit" value="Save" name="commit">
  </form>
</div>
